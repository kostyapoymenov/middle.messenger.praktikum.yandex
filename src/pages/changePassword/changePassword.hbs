<main class="main">
  <div class="form-block">
    {{#> FormAuth name="registration"}}
      <div class="form__content">
        <h2 class="form__title">Изменить пароль</h2>

        {{> InputField
          name="oldPassword"
          id="oldPassword" 
          type="oldPassword"
          placeholder="Пароль"
          label="Пароль"
        }}

        {{> InputField
          name="newPassword"
          id="newPassword" 
          type="newPassword"
          placeholder="Пароль"
          label="Пароль"
        }}

        {{> InputField
          name="newPassword_repeat"
          id="newPassword_repeat" 
          type="newPassword_repeat"
          placeholder="Пароль"
          label="Пароль (ещё раз)"
        }}
      </div>

      <div class="form__btns">
        {{> Button label="Сохранить" type="submit" }}
        {{> Link class="link" text="Назад"}}
      </div>
    {{/FormAuth}}
  </div>
</main>